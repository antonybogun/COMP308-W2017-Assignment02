<% include ../partials/header.ejs %>

  <!-- MAIN CONTENT -->
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <h3>Business Contacts List View</h3>
        <a href="/contacts/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a contact</a>
        <br/>
        <br/>
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th class="text-center">Phone Number</th>
                <th class="text-center">Email</th>
                <th class="text-center"></th>
                <th class="text-center"></th>
              </tr>
            </thead>
            <tbody id="myTable">
              <!-- Template Row -->
              <% for (let count = 0; count < contacts.length; count++) { %>
                <tr>
                  <td class="">
                    <%= contacts[count].Name %>
                  </td>
                  <td class="text-center">
                    <%= contacts[count].PhoneNumber %>
                  </td>
                  <td class="text-center">
                    <%= contacts[count].Email %>
                  </td>
                  <td class="text-center">
                    <a href="/contacts/<%= contacts[count]._id %>" class="btn btn-primary">
                      <i class="fa fa-pencil-square-o"></i> Edit</a>
                  </td>
                  <td class="text-center">
                    <a href="/contacts/delete/<%= contacts[count]._id %>" class="btn btn-danger">
                      <i class="fa fa-trash-o"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
        <div class="col-md-offset-1 col-md-10 text-center">
          <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
      </div>
    </div>
  </div>

  <% include ../partials/footer.ejs %>